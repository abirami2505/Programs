Method1:
#include <stdio.h>
int main() {
    int number;
    printf("Enter a number: ");
    scanf("%d", &number);
    if (number & 1)
   {
    printf("%d is odd.\n", number); 
    }
 else 
     {
      printf("%d is even.\n", number);
     }
    return 0;
}

